{
  "name": "streametrics",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "manifest": {
    "permissions": [
      "storage"
    ]
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "testui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "halfBuild": "vite build",
    "build": "npm run build:tsc & npm run build:vite & npm run build:css",
    "build:tsc": "tsc -b",
    "build:vite": "vite build",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/css/output.css --minify",
    "build:fast": "tsc -b --incremental && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:browser": "vitest --workspace=vitest.workspace.ts"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@types/jest": "^29.5.12",
    "build": "^0.1.4",
    "chart.js": "^4.4.3",
    "chartjs-plugin-datalabels": "^2.2.0",
    "puppeteer": "^23.11.1",
    "puppeteer-core": "^23.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/audioworklet": "^0.0.75",
    "@types/chrome": "^0.0.268",
    "@types/hammerjs": "^2.0.46",
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/browser": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "tailwindcss": "3.4.13",
    "typescript": "^5.2.2",
    "vite": "^5.4.18",
    "vitest": "^1.6.1"
  }
}
